/* pages/home/home.wxss */
.search {
  display: flex;
  background-color: green;
  padding: 20rpx;
}
.search .button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background-color: white;
}
.search .button .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search .button .text {
  font-size: 40rpx;
}
.title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.title-wrapper .title {
  color: gray;
  font-weight: bold;
  font-size: 40rpx;
}
.title-wrapper .more {
  color: gray;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.title-wrapper .arrow {
  width: 20rpx;
  height: 20rpx;
  border-right: 4rpx solid #c9c9c9;
  border-bottom: 4rpx solid #c9c9c9;
  transform: rotate(-45deg);
  margin-left: 5rpx;
}
.items {
  white-space: nowrap;
}
.items .item {
  display: inline-flex;
  flex-direction: column;
  margin: left 30rpx;
}
.items .item:last-of-type {
  margin-right: 30rpx;
}
.item .photo {
  width: 210rpx;
  height: 301rpx;
  margin-bottom: 15rpx;
}
.item .name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.rate-wrapper {
  display: flex;
  align-items: center;
}
.rate-wrapper .stars {
  display: flex;
  align-items: center;
}
.stars .star {
  width: 32rpx;
  height: 32rpx;
}
