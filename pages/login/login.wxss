/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.logo {
  width: 144rpx;
  height: 144rpx;
  margin: 80rpx;
}
.btn-login {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  border-radius: 10rpx;
}
.wechat {
  background-color: #42bd55;
  color: #fff;
  height: 80rpx;
  margin-bottom: 40rpx;
}
.douban {
  background-color: #fff;
  color: #42bd55;
  border: #42bd55 1rpx solid;
}
.agreement {
  color: gray;
  font-size: 25rpx;
  display: flex;
  position: absolute;
  bottom: 40rpx;
}
.agreement .open {
  color: #42bd55;
  margin-left: 12rpx;
}
